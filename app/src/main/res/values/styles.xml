<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorGreen</item>
    </style>
    
    <style name="Button">
        <item name="android:padding">20sp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">@dimen/margin_1dp</item>
    </style>

    <style name="Label" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">30dp</item>
    </style>
    
    <style name="TextView">
        <item name="android:textSize">@dimen/textSize50sp</item>
        <item name="android:paddingRight">@dimen/paddingRight15sp</item>
        <item name="android:paddingBottom">@dimen/paddingBottom30sp</item>
        <item name="android:paddingTop">@dimen/paddingTop30sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:height">@dimen/height195dp</item>
    </style>
    
</resources>
